<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:cwp="http://www.carewebframework.org/schema/plugin" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
		 http://www.springframework.org/schema/beans/spring-beans.xsd
		 http://www.carewebframework.org/schema/plugin
		 http://www.carewebframework.org/schema/plugin/plugin-extensions.xsd">

	<beans profile="root">

		<cwp:plugin url="~./org/hspconsortium/cwf/ui/messages/main.zul"
			id="cwfMessages" name="Messages">
			<cwp:serialization>
				<cwp:property id="caption" name="Title Caption" type="text"
					description="Text for the title caption." />
				<cwp:property id="color1" name="Caption Color 1" type="color"
					description="Starting color for caption gradient." />
				<cwp:property id="color2" name="Caption Color 2" type="color"
					description="Ending color for caption gradient." />
				<cwp:property id="captionStyle" name="Caption Style"
					type="enum" description="Style of caption.">
					<cwp:config>
						<cwp:entry key="class">org.carewebframework.ui.sharedforms.CaptionedForm$CaptionStyle</cwp:entry>
					</cwp:config>
				</cwp:property>
				<cwp:property id="color" name="Background Color" type="color"
					description="Background color." />
				<cwp:property id="alertDuration" name="Alert Duration" type="integer"
					description="How long (in seconds) a message alert will persist.">
					<cwp:config>
						<cwp:entry key="min">1</cwp:entry>
						<cwp:entry key="max">99999</cwp:entry>
					</cwp:config>
				</cwp:property>
				<cwp:property id="alertThreshold" name="Alert Threshold"
					type="enum" 
					description="You will be alerted of new messages with priorities at or above this threshold.">
					<cwp:config>
						<cwp:entry key="class">org.hspconsortium.cwf.api.messages.AbstractMessages$Urgency</cwp:entry>
					</cwp:config>
				</cwp:property>
				<cwp:property id="showAll" name="Show All Messages"
					type="boolean"
					description="If true, all messages are shown.  If false, only those associated with the current patient are shown" />
			</cwp:serialization>
			<cwp:resource>
				<cwp:help-resource module="cwfMessagesHelp" />
				<cwp:css-resource url="~./org/hspconsortium/cwf/ui/messages/messages.css" />
			</cwp:resource>
		</cwp:plugin>

	</beans>

	<beans profile="desktop">

		<bean id="cwfMessagesMainController" class="org.hspconsortium.cwf.ui.messages.MainController"
			scope="prototype">
			<property name="messageService" ref="cwfMessageService" />
		</bean>

		<bean id="cwfMessagesSchedulingController" class="org.hspconsortium.cwf.ui.messages.SchedulingController"
			scope="prototype">
			<property name="messageService" ref="cwfMessageService" />
		</bean>

		<bean id="cwfMessagesScheduleController" class="org.hspconsortium.cwf.ui.messages.ScheduleController"
			scope="prototype">
			<property name="messageService" ref="cwfMessageService" />
		</bean>

		<bean id="cwfMessagesViewerController" class="org.hspconsortium.cwf.ui.messages.ViewerController"
			scope="prototype" />

		<bean id="cwfMessagesRecipientsController" class="org.hspconsortium.cwf.ui.messages.RecipientsController"
			scope="prototype">
			<property name="messageService" ref="cwfMessageService" />
		</bean>

		<bean id="cwfMessagesProcessingController" class="org.hspconsortium.cwf.ui.messages.ProcessingController"
			scope="prototype">
			<property name="messageService" ref="cwfMessageService" />
		</bean>

	</beans>

</beans>